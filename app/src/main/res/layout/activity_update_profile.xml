<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UpdateProfile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE PROFILE"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/name_up"
        android:layout_margin="4dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_account_circle_24"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profession"
        android:id="@+id/profession_up"
        android:layout_margin="4dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bio"
        android:id="@+id/bio_up"
        android:layout_margin="4dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_emoji_people_24"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:id="@+id/email_up"
        android:layout_margin="4dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Website"
        android:id="@+id/website_up"
        android:layout_margin="4dp"
        android:paddingStart="5dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_public_24"
        android:textColor="@android:color/darker_gray"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_up"
        android:text="Update Profile"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

</LinearLayout>